@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <h1 class="text-center">Топ кампаний</h1>
    <div class="row">
        <div class="col-md-3 col-12">
            2 кампания
        </div>
        <div class="col-md-6 col-12">
            топ кампания
        </div>
        <div class="col-md-3 col-12">
            2 кампания
        </div>
    </div>
    <h1 class="text-center">Список кампаний</h1>
    @foreach (var item in _context.Campaign)
    {

        <div class="col-md-12">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <img class="card-img-right flex-auto d-none d-md-block" style="width: 400px; height: 250px;" src="@await _dropbox.getImgByUrl(item.Img)" data-holder-rendered="true">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2 text-primary">Topic</strong>
                    <h3 class="mb-0">
                        <a class="text-dark">@Html.DisplayFor(modelItem => item.Name)</a>
                    </h3>
                    <div class="mb-1 text-muted">DateTime</div>
                    <p class="card-text mb-auto">@Html.DisplayFor(modelItem => item.ShortDescription)</p>
                    <a asp-action="Details" asp-controller="Campaigns" asp-route-id="@item.Id">Continue reading</a>
                </div>
            </div>
        </div>


    }
</div>
